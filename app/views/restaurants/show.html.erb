<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.category %></p>
<p>Phone: <%= @restaurant.phone_number %> | Address: <%= @restaurant.address %></p>
<hr>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> | <%= "*" * review.rating %></li>
  <% end %>
</ul>

<%= link_to "create a review", new_restaurant_review_path(@restaurant) %> | <%= link_to "back to restaurants list", restaurants_path %>
